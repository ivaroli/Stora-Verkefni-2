@model List<BookApp.Models.StaffBookViewModel>;
@{
    ViewData["Title"] = "StaffPage";
}
<div class="container" id="">
    <div id="tree"><a asp-controller="Home" asp-action="Index">Home page</a> >> <a asp-controller="User" asp-action="StaffPage">Staff Page</a></div>        <h1>Staff page</h1>
        <div class="component" id="staffpage-container">
                <div class="input-group">
                    <input type="hidden" name="search_param" value="all" id="search_param">
                    <input type="text" class="form-control" name="x" placeholder="Search for book by title or id..." id="search">
                    <span class="input-group-btn search-icon">
                        <button class="btn btn-default" type="button"><span class="glyphicon glyphicon-search"></span></button>
                    </span>
                </div>
            <button type="submit" class="btn btn-primary" id="add_book" data-toggle="modal" data-target="#addModal">Add book</button>
            <table id="staff_books">
                <tr>
                    <th class="col-1">Name</th>
                    <th class="col-2">Id</th>
                    <th class="col-3">Edit</th>
                    <th class="col-4">Delete</th>
                </tr>
                    @foreach(var book in @Model){
                        <tr>
                        <td class="col-1">@book.Title</td>
                        <td class="col-2">@book.Id</td>
                        <td class="col-3"><span class="glyphicon glyphicon-pencil icon"></span></td>
                        <td class="col-4"><span class="glyphicon glyphicon-remove"></span></td>
                        </tr>
                    }
            </table>
            <div class="modal fade" id="addModal" tabindex="-1" role="dialog">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Modal title</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <form asp-controller="Books" asp-action="AddBook" autocomplete="off" id="add-book-form" method="post">
                                <div class="form-group">
                                    <label for="Title">Title</label>
                                    <input name="Title" for="Title" type="text" class="form-control" placeholder="Enter username" required>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary">Add Book</button>
                            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
     <script  src="~/js/StaffPage.js"></script>
}