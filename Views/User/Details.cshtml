@using BookApp.Models;
@model BookApp.Models.UserDetailsViewModel;
@{
    ViewData["Title"] = "Account Information";
}

<div class="container" id="signin-container">
    <div class="row" id="user-details-main-row">
        <div class="component" id="user-details">
            <img src="~/images/user.svg" alt="User Image" width="300px" height="300px" id="userimage">
            <form autocomplete="off">
                <input type="file" id="file1" name="image" accept="image/*" capture style="display:none"/>
                <div class="form-group user-form-input">
                    @{
                        <label asp-for="FirstName">First Name</label>
                        if(@Model != null && @Model.FirstName != ""){
                            <input id="fname" asp-for="FirstName" type="text" name="FirstName" class="form-control" value="@Model.FirstName">
                        }
                        else{
                            <input id="fname" asp-for="FirstName" type="text" name="FirstName" class="form-control" value="">
                        }
                    }
                </div>
                <div class="form-group user-form-input">
                    @{
                        <label asp-for="LastName">Last Name</label>
                        if(@Model != null && @Model.LastName != ""){
                            <input id="lname" asp-for="LastName" type="text" name="LastName" class="form-control" value="@Model.LastName">
                        }
                        else{
                            <input id="lname" asp-for="LastName" type="text" name="LastName" class="form-control" value="">
                        }
                    }
                </div>
                <div class="form-group user-form-input">
                    <label for="Country">Country</label>
                    <select for="Country" name="Country" class="form-control" id="country">
                    @{
                        if(@Model != null && @Model.Country != ""){
                            <option>@Model.Country</option>
                        }
                        else{
                            <option>Select A Country</option>
                        }
                    }
                        @await Html.PartialAsync("_Countries")
                    </select>
                </div>
                <div class="form-group user-form-input">
                    @{
                        <label asp-for="City">City</label>
                        if(@Model != null && @Model.City != ""){
                            <input id="city" asp-for="City" type="text" name="City" class="form-control" value="@Model.City">
                        }
                        else{
                            <input id="city" asp-for="City" type="text" name="City" class="form-control" value="">
                        }
                    }
                </div>
                <div class="form-group user-form-input">
                    @{
                        <label asp-for="Address">Address</label>
                        if(@Model != null && @Model.City != ""){
                            <input id="address" asp-for="Address" type="text" name="Address" class="form-control" value="@Model.Address">
                        }
                        else{
                            <input id="address" asp-for="Address" type="text" name="Address" class="form-control" value="">
                        }
                    }
                </div>
            </form>
            <div class="order-history">
                <h3>Order History</h3>
                <div class="history-container">
                    <ul class="list-group">
                    </ul>
                </div>
            </div>
            <button id="save_btn" class="btn btn-default">Save</button>
            <form asp-controller="User" asp-action="SignOut" method="post">
                <button id="sign-out" class="btn btn-default">Sign Out</button>
            </form>
            <div class="break"></div>
        </div>
    </div>
</div>
@section scripts {
    <script  src="~/js/orderHistory.js"></script>
    <script  src="~/js/ImageInsert.js"></script>
}