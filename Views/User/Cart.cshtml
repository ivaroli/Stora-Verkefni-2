@model BookApp.Models.CartViewModel
@{
    ViewData["Title"] = "Cart";
}
<div id="tree"><a asp-controller="Home" asp-action="Index">Home page</a> >> <a asp-controller="User" asp-action="Cart">Cart</a></div>

<h1 id="cart-title">My Cart<span id="cart-mynd"class="glyphicon glyphicon-shopping-cart icon"></span></h1>
<div class="container">
    <div class="help-container" id="cart">
        <div  class=" sign-container">
            <div class="row">
                <div class=" col-md-6" id="">
                    @foreach(var book in @Model.Cart)
                    {
                        <div class="cart-div">
                        <div>
                            <h3 class="cart-book-title">@book.OrderBook.Title</h3>
                            <img class="cart-img" src="@book.OrderBook.Image" alt="">
                        </div>
                            <span id="cart-remove-book" class="glyphicon glyphicon-remove"></span>
                        <div>

                        </div>
                        </div>
                    }
                </div>
                <div class="col-md-5 component" id="cart-right">
                    <h1>Total</h1>
                    <h3>Sub total: @Model.Total</h3>
                    <button type="submit" class="btn btn-primary" id="button-cart"><a asp-controller="User" asp-action="CheckOut">Check out</a></button>
                    <p>We accept these payment methods</p>
                    <img src="~/images/visa.svg" alt="VISA" height="40px" width="auto">
                    <img src="~/images/mastercard-2.svg" alt="MASTERCARD" height="40px" width="auto">
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts {
     <script  src="~/js/cart.js"></script>
}
