<body>
    <!-- NAVBAR START -->
    <nav class="navbar navbar-inverse">
        <div class="container-fluid">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span> 
            </button>
            <a class="navbar-brand" href="#">
                <img src="~/images/logo.png" alt="The Book Cave">   
            </a>
            <div class="navbar-collapse collapse" id="myNavbar">
                <ul class="nav navbar-nav">
                    <li><a asp-area="" asp-controller="Home" asp-action="Contact"><span class="	glyphicon glyphicon-envelope"></span> Contact Us</a></li>
                    <li><a asp-area="" asp-controller="Home" asp-action="info"><span class="glyphicon glyphicon-info-sign"></span> Help</a></li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    <li><a href="#"><span class="glyphicon glyphicon-heart"></span> Wishlist</a></li>
                    <li><a href="#"><span class="glyphicon glyphicon-shopping-cart"></span> Cart</a></li>
                    <li><a href="#"><span class="glyphicon glyphicon-user"></span> Sign In</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- NAVBAR END -->

    <!-- CONTENT START -->
    <div class="container body-content">
        @RenderBody()
    </div>
    <!-- CONTENT END -->

    <!-- FOOTER START -->
    <footer>
        <div class="container text-center text-md-left">
            <div class="row footer-container">
                <div class="col-md-4">
                    <ul>
                        <li>
                            <h5 class="text-uppercase mb-4 mt-3 font-weight-bold"><a href="#">About Us</a></h5>
                        </li>
                        <li>
                            <h5 class="text-uppercase mb-4 mt-3 font-weight-bold"><a href="#">Sign In</a></h5>
                        </li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <ul>
                        <li>
                            <h5 class="text-uppercase mb-4 mt-3 font-weight-bold"><a href="#">Help</a></h5>
                        </li>
                        <li>
                            <h5 class="text-uppercase mb-4 mt-3 font-weight-bold"><a href="#">Contact Us</a></h5>
                        </li>
                        <li>
                            <h5 class="text-uppercase mb-4 mt-3 font-weight-bold"><a href="#">Where Do We Deliver?</a></h5>
                        </li>
                    </ul>
                </div>
                <div class="col-md-4 logo-container">
                    <ul>
                        <li id="payment-options">
                            <h5 class="text-uppercase mb-4 mt-3 font-weight-bold">We Accept These Payment Methods</h5>
                            <img src="~/images/visa.svg" alt="VISA" height="40px" width="auto">
                            <img src="~/images/mastercard-2.svg" alt="MASTERCARD" height="40px" width="auto">
                        </li>
                        <li id="media-options">
                            <h5 class="text-uppercase mb-4 mt-3 font-weight-bold">Follow Us</h5>
                            <img src="~/images/facebook-3.svg" alt="FACEBOOK" height="40px" width="auto">
                            <img src="~/images/twitter-3.svg" alt="TWITTER" height="40px" width="auto">
                            <img src="~/images/instagram-2016.svg" alt="INSTAGRAM" height="40px" width="auto">
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="footer-copyright py-3 text-center">
            &copy; 2018 Copyright -
            <a href="#"> The Book Cave </a>
        </div>
    </footer>
    <!-- FOOTER END -->

